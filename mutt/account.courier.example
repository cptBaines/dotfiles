set my_domain=example.com
set my_user=public
set my_pwd=VerySecretPwd
set my_account=$my_user@$my_domain

set realname="John Doe"
set from=$my_account

set imap_user=$my_account
set imap_pass=$my_pwd
set folder="imaps://$my_domain/"
set spoolfile="+INBOX"
set record="+.Sent"
set postponed="+.Drafts"
set trash="+.Trash"
set smtp_pass=$my_pwd 
set smtp_url="smtp://$my_account@$my_domain:587"
set header_cache = ~/Mail/cache/hdr
set message_cachedir = ~/Mail/cache/msg
